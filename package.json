{
  "name": "react-starter",
  "version": "1.0.0",
  "description": "Starter project for React web applications",
  "homepage": "https://github.com/diegofrayo/react-starter#readme",
  "license": "MIT",
  "private": true,
  "keywords": [
    "react",
    "react-router",
    "babel",
    "webpack",
    "hmr",
    "eslint"
  ],
  "bugs": {
    "email": "diegofrayo@gmail.com",
    "url": "https://github.com/diegofrayo/react-starter/issues"
  },
  "author": {
    "name": "Diego Rayo",
    "email": "diegofrayo@gmail.com",
    "url": "https://diegofrayo.netlify.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/diegofrayo/react-starter.git"
  },
  "scripts": {
    "start": "cross-env npm run start:all",
    "start:all": "cross-env gulp build && npm run build:tailwind && node config/webpack.config.dev.server.js",
    "build": "cross-env ENABLE_LINT=true && npm run build:all",
    "build:all": "cross-env gulp clean && webpack --mode production && gulp build --prod",
    "lint": "eslint --fix 'src/**/*.{js,jsx}'",
    "style": "prettier --write 'src/**/*.{js,jsx}'",
    "build:tailwind": "npx tailwindcss build src/styles/tailwind.css -o build/css/tailwind.css"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/preset-env": "^7.9.0",
    "@babel/preset-react": "^7.9.4",
    "@diegofrayo/eslint-config": "^1.0.4",
    "babel-loader": "^8.1.0",
    "browser-sync": "^2.26.7",
    "clean-webpack-plugin": "^3.0.0",
    "connect-history-api-fallback": "^1.6.0",
    "cross-env": "^7.0.2",
    "css-loader": "^3.4.2",
    "dotenv": "^8.2.0",
    "eslint": "^6.8.0",
    "eslint-loader": "^3.0.3",
    "gulp": "^4.0.2",
    "gulp-clean": "^0.4.0",
    "gulp-htmlmin": "^5.0.1",
    "gulp-imagemin": "^7.1.0",
    "gulp-load-plugins": "^2.0.2",
    "gulp-rename": "^2.0.0",
    "gulp-replace": "^1.0.0",
    "gulp-run-sequence": "^0.3.2",
    "gulp-util": "^3.0.8",
    "husky": "^4.2.3",
    "lint-staged": "^10.1.1",
    "node-cmd": "^3.0.0",
    "prettier": "^2.0.2",
    "style-loader": "^1.1.3",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3",
    "webpack-hot-middleware": "^2.25.0",
    "yargs": "^15.3.1"
  },
  "dependencies": {
    "@babel/polyfill": "^7.8.7",
    "@diegofrayo/vlt": "^1.0.0",
    "@hot-loader/react-dom": "^16.13.0",
    "classnames": "^2.2.6",
    "dayjs": "^1.8.23",
    "formik": "^2.1.4",
    "history": "^4.10.1",
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-hot-loader": "^4.12.20",
    "react-router": "^5.1.2",
    "react-router-dom": "^5.1.2",
    "styled-jsx": "^3.2.5",
    "tailwindcss": "^1.2.0",
    "whatwg-fetch": "^3.0.0"
  },
  "engines": {
    "node": ">=8.15.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  }
}
